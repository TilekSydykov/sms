<!DOCTYPE html>
<html lang="ru">
  {{ template "head" . }}
  <body>
      {{ template "header" . }}
      <div class="container main">
        <div class="card-content">
          <div class="card">
            <div class="card-content has-text-centered">
              Messages balance 3 640 out of 5 000
              <hr>
              <b id="date"></b>
              <br><br>
              <div style="color: #424242; font-size: 0.9em">
                no notifications
              </div>
              <script>
                document.getElementById("date").innerText = (new Date()).toDateString()
              </script>
            </div>
          </div>
        </div>
      </div>
      {{ template "footer" . }}
  </body>
</html>
