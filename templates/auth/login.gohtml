<!DOCTYPE html>
<html lang="ru">
{{ template "head" . }}
<body>
{{ template "header" . }}
<div class="container main" >
    {{ template "alert-message" . }}
    <div class="card">
        <div class="card-content">
            <h1 class="subtitle">Авторизация</h1>
            <form action="/login" method="post">
                <label for="staticEmail" class="label">Почта</label>
                <div class="control">
                    <input type="text" class="input" id="staticEmail" name="email" placeholder="ranobeshnik@ranobe.com">
                </div>
                <label for="inputPassword" class="label">Пароль</label>
                <div class="control">
                    <input type="password" class="input" name="password" id="inputPassword">
                </div>
                <br>
                <div class="control">
                    <button type="submit" class="button is-primary">Войти</button>
                </div>
            </form>
            <br>
            <a href="/register">Регистрация</a>
        </div>
    </div>


</div>
{{ template "footer" . }}
</body>
</html>