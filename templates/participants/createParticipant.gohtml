<!DOCTYPE html>
<html lang="ru">
{{ template "head" . }}
<body>
{{ template "header" . }}
<div class="container main" >
  {{ template "alert-message" . }}
  <div class="card">
    <div class="card-content">
      <h2 class="subtitle">Добавить участника</h2>
      <form action="/participants/create" method="post">
        <label for="static" class="label">Название</label>
        <div class="control">
          <input type="text" class="input" id="static" name="title" placeholder="Название">
        </div>
        <label for="static1" class="label">Описание</label>
        <div class="control">
          <textarea class="textarea" id="static1" name="desc" placeholder="Описание"></textarea>
        </div>
        <label for="static2" class="label">Активирован</label>
        <div class="control">
          <input class="checkbox" type="checkbox" id="static2" name="active" placeholder="Активирован"/>
        </div>
        <br>
        <div class="buttons">
          <button type="submit" class="button is-primary">Создать</button>
        </div>

      </form>
    </div>
  </div>
</div>
{{ template "footer" . }}
</body>
</html>